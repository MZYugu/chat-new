<div class="chat_header">
  <div class="left_header">
    <div class="header_title">
      <%= @room.name %>
    </div>
  </div>
  <div class="right_name">
    <div class="header_button">
      <a href="#">DELETE ROOM</a>
    </div>
  </div>
</div>

<div class="messages">
  <%= render partial: 'message', collection: @messages %>
</div>

<%= form_with model: [@room, @message], class: 'form', local: true do |f| %>
  <div class="form_input">
    <%= f.text_field :content, class: 'form_message', placeholder: 'type a message' %>
    <label class="form_image">
      <span class="image_file">IMAGE</span>
      <%= f.file_field :image, class: 'hidden' %>
    </label>
  </div>
  <%= f.submit 'SEND', class: 'form_submit' %>
<% end %>